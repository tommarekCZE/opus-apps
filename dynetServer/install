print("Dynet Installer")
write("Please interest disk on right side, keep all other disks ejected!")
write("Press any key to continue")
os.pullEvent("key")

if disk.isPresent("right") then
	write("Downloading files at right disk")
else
	write("Please setup disk on right side")
	write("Press any key to continue")
	os.pullEvent("key")
	return
end
	
print("Downloading Repository...")
shell.setPath("/disk/")
shell.run(gitget, "tommarekCZE", "dynetInstaller", "main")
write("Repository Downloaded... Setup may begin")
write("Press any key to continue")
os.pullEvent("key")